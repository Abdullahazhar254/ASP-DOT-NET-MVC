@model model.Recipe

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<div class="contact1-pic js-tilt col-lg-offset-1" data-tilt style="position:absolute">
    <br />
    <br />
    <br />
    <br />


    <img src="~/Content/images/gallery_08.jpg" alt="IMG" style="width:800px;height:320px">
</div>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <pre class="block-title col-lg-offset-6" style="background:none;border:none">    Recipes</pre>
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Recipe_Id)

        <div class="form-group">
            <div class="col-md-6 col-lg-offset-5">
                @Html.LabelFor(model => model.Recipe_Name, htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.EditorFor(model => model.Recipe_Name, new { htmlAttributes = new { @class = "input1", placeholder = "Enter Recipe Name" } })
                <span class="shadow-input1" style="width:45%;margin-left:16%"></span>
                @Html.ValidationMessageFor(model => model.Recipe_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-lg-offset-5">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "input1", placeholder = "Enter Description" } })
                <span class="shadow-input1" style="width:45%;margin-left:16%"></span>
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-lg-offset-5">
                @Html.LabelFor(model => model.Ingredients, htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.EditorFor(model => model.Ingredients, new { htmlAttributes = new { @class = "input1", placeholder = "Enter Ingredients" } })
                <span class="shadow-input1" style="width:45%;margin-left:16%"></span>
                @Html.ValidationMessageFor(model => model.Ingredients, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-lg-offset-5">
                @Html.LabelFor(model => model.Label, "Label", htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.DropDownList("Label", null, htmlAttributes: new { @class = "form-control", style = "border-radius:20px" })
                <span class="shadow-input1" style="width:45%;margin-left:16%"></span>
                @Html.ValidationMessageFor(model => model.Label, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-lg-offset-5">
                @Html.LabelFor(model => model.Posted_by, "Posted_by", htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.DropDownList("Posted_by", null, htmlAttributes: new { @class = "form-control", style = "border-radius:20px" })
                <span class="shadow-input1" style="width:45%;margin-left:16%"></span>
                @Html.ValidationMessageFor(model => model.Posted_by, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="col-md-offset-6 col-md-10">
            <input style="width:290px" type="submit" value="Save" class="container-contact1-form-btn contact1-form-btn" />
        </div>

    </div>
}
<br />
<br />
<div class="col-lg-1">
    @Html.ActionLink("Back to List", "Index", "", new { @class = "container-contact1-form-btn contact1-form-btn" })
</div>
