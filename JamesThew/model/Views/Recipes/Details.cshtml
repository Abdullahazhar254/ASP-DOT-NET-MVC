<table class="table">

    <tr>
        <th>

            <h5 class="block-title text-center text-center col-lg-6 col-lg-offset-2" style="text-align:left">@Html.DisplayNameFor(model => model.Ingredients)</h5>
        </th>
        <th>
            <h5 class="block-title text-center col-lg-3 col-lg-offset-2">@Html.DisplayNameFor(model => model.Description)</h5>
        </th>

    </tr>

    <tr>

        <td class="col-lg-6">
            <pre style="font-family:sans-serif;font-size:16px;border:none;color:white;background:none;text-align:left" class="text-center col-lg-6 col-lg-offset-2">@Html.DisplayFor(model => model.Ingredients)</pre>
        </td>
        <td class="col-lg-offset-6">
            <pre style="font-family:sans-serif;font-size:16px;border:none;color:white;background:none;text-align:justify;" class="text-center col-lg-6 col-lg-offset-2">@Html.DisplayFor(model => model.Description)</pre>
        </td>



    </tr>


</table>
