    @{ Html.RenderAction("_Comment");}
</div>*@
<div class="col-lg-offset-5" style="width:100px">
    <p style="font-size:20px"><input id="feedback" type="submit" value="Give a Feedback" class="container-contact1-form-btn contact1-form-btn fa fa-long-arrow-right" aria-hidden="true" /></p>

</div>
<div id="feedbackSection" style="display:none">
    @{ Html.RenderAction("_Feedback");}
</div>
<br />
<div class="col-lg-offset-5" style="width:100px">
    @if (User.IsInRole("admin"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Recipe_Id }, new { @class = "container-contact1-form-btn contact1-form-btn" })<br />
        @Html.ActionLink("Delete", "Delete", new { id = Model.Recipe_Id }, new { @class = "container-contact1-form-btn contact1-form-btn" })
    }
</div>
<br />
<script>
    $(document).ready(function () {
        $("#feedback").click(function () {
            $("#feedbackSection").toggle();
        });
    });
</script>


