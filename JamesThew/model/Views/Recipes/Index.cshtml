@model IEnumerable<model.Recipe>

@{
    ViewBag.Title = "Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div id="menu" class="menu-main pad-top-100 pad-bottom-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div>

                    <pre class="block-title col-lg-offset-4" style="background:none;border:none">      Our Recipes</pre>
                   
                    <p class="col-lg-2 col-lg-offset-5">
                        
                        @if (User.IsInRole("admin")|| User.IsInRole("yearly") || User.IsInRole("monthly") || User.IsInRole("halfyearly"))
                        {
                            @Html.ActionLink("Add Recipe", "Create", "", new { @class = "container-contact1-form-btn contact1-form-btn" })
                        }
                    </p>
                    <br />
                    <br />
                    <p class="title-caption text-center" style="color:white">Find and share everyday cooking inspiration on all recipes.</p>
                </div>
                <div>

                    <div class="slider slider-single">
                        <div>
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                                    <div class="offer-item">
                                        <img style="height:85px; width:95px;" src="@Url.Content(item.Image)" class="img-responsive" />
                                        <h3 class="block-title" style="font-size:18px">@Html.DisplayFor(modelItem => item.Recipe_Name)</h3>

                                        <div style="color:white">


                                            Learn How To Make The @Html.DisplayFor(modelItem => item.Recipe_Name)
                                        </div>
                                        <a href="@Url.Action("Details","Recipes",new {id= item.Recipe_Id })"><span class="offer-price" style="color:white;font-size:16px">More</span></a>
                                    </div>
                                </div>



                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>